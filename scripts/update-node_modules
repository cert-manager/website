#!/usr/bin/env bash

#Â This script uses the 'multiversion' tool to fetch additional documentation
# content/ directories from each release branch for the documentation.
# This script only needs to be run when building a full multi-version copy
# of the docs site.

set -o errexit
set -o nounset
set -o pipefail

REPO_ROOT="${REPO_ROOT:-$(cd "$(dirname "$0")/.." && pwd)}"
cd "$REPO_ROOT"

if ! command -v npm &>/dev/null; then
	echo "Ensure npm command is installed"
	exit 1
fi

FORCE="${1:-}"

if [ "$FORCE" = "--force" ]; then
	echo "--force flag set, removing existing node_modules directory"
	rm -rf "./node_modules"
fi

if [ ! -d "./node_modules" ]; then
	echo "node_modules directory does not exist, running npm install"
	npm install
fi
