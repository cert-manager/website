set -o errexit
set -o nounset
set -o pipefail

REPO_ROOT="${REPO_ROOT:-$(cd "$(dirname "$0")/.." && pwd)}"

cd "${REPO_ROOT}"

"${REPO_ROOT}/scripts/update-node_modules"

echo "+++ Running remark"
"${REPO_ROOT}/node_modules/.bin/remark" \
  --rc-path ".remarkrc" \
  --frail \
  content/

echo "+++ Running spell check"
"${REPO_ROOT}/node_modules/.bin/mdspell" \
  --report \
  --en-us \
  --ignore-numbers \
  --ignore-acronyms \
  "content/**/*.md" \
  "content/**/*.html" \
  "_layouts/*.html" \
  "_includes/*.html" \
  "*.html" \
  "!content/docs/reference/api-docs.md" \
  "!content/next-docs/reference/api-docs.md" \
  "!content/v0.12-docs/reference/api-docs.md" \
  "!content/v0.13-docs/reference/api-docs.md" \
  "!content/v0.14-docs/reference/api-docs.md" \
  "!content/v0.15-docs/reference/api-docs.md" \
  "!content/v0.16-docs/reference/api-docs.md" \
  "!content/v1.0-docs/reference/api-docs.md" \
  "!content/v1.1-docs/reference/api-docs.md" \
  "!content/v1.2-docs/reference/api-docs.md" \
  "!content/v1.3-docs/reference/api-docs.md" \
  "!content/v1.4-docs/reference/api-docs.md" \
  "!content/v1.5-docs/reference/api-docs.md" \
  "!content/v1.6-docs/reference/api-docs.md" \
  "!content/v1.7-docs/reference/api-docs.md" \
